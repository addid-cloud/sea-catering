generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DB_URI_POSTGRES_URL")
}

model Subscription {
  id            Int           @id @default(autoincrement())
  name          String
  phone         String
  plan          String
  allergies     String?
  totalPrice    Int           @default(0) 
  status        String        @default("Active") 
  pauseStart    DateTime?     
  pauseEnd      DateTime?     
  userId        Int
  user          User          @relation(fields: [userId], references: [id])
  menus         Menu[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}



model Menu {
  id             Int      @id @default(autoincrement())
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  subscriptionId Int
  date           String
  time           String
  main           String
  side           String
  drink          String
}
model User {
  id        Int        @id @default(autoincrement())
  fullName  String
  email     String     @unique
  password  String     // disimpan dalam bentuk hash
  role      Role       @default(USER)
  createdAt DateTime   @default(now())
  subscriptions Subscription[]
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  message   String
  rating    Int      
  createdAt DateTime @default(now())
}
enum Role {
  USER
  ADMIN
}